<div class="col-sm-8" >
  <p id="notice"><%= notice %></p>

  <%= image_tag @bug.image.url(:main) %>

  <p>
    <strong>Title:</strong>
    <%= @bug.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @bug.description %>
  </p>

  <%= link_to 'Edit', edit_bug_path(@bug) %> |
  <%= link_to 'Back', bugs_path %>
</div>