<div class="container-fluid">
  <div class="row">
    <div class="col-xs-2">
      <!-- <%= link_to 'Write a New Bug', new_bug_path %> -->
    </div>
  </div>
</div>
<div class="container-fluid">
  <div class="row">
    <div class="col-xs-10" >
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Title:</strong>
        <%= @bug.title %>
      </p>

      <p>
        <strong>Description:</strong>
        <%= @bug.description %>
      </p>

      <%= image_tag @bug.image.url(:main) %>
      <%= link_to @bug.document, @bug.document.url  %>
      <br>
      
      <p><h2><%= @bug.comments.count %>   Comments</h2></p>
      
      <br>
      
      <%= render @bug.comments %>

      <br>

      <h2>Add a Comment</h2>
      <%= render 'comments/form' %>

      <br>
      <% if policy(Bug).edit? %>
        <%= link_to 'Edit', edit_bug_path(@bug) %>
      <% end %>
      <%= link_to 'Back', bugs_path %>
    </div>
  </div>
</div>
